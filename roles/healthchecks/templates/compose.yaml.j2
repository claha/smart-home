---
services:
  healthchecks:
    image: docker.io/healthchecks/healthchecks:v2.10
    container_name: healthchecks
    ports:
      - 8000:8000
    environment:
      - DB=sqlite
      - DB_NAME=/data/hc.sqlite
      - DEBUG=False
      - SECRET_KEY={{ healthchecks_secret_key }}
    volumes:
      - ./data:/data
    restart: unless-stopped
