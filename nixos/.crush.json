{
  "$schema": "https://charm.land/crush.json",
  "options": {
     "skills_paths": [
       "./.agents/skills"
     ]
  },
  "mcp": {
    "nixos": {
      "type": "stdio",
      "command": "nix",
      "args": ["run", "github:utensils/mcp-nixos", "--"]
    }
  },
  "permissions": {
    "allowed_tools": [
      "mcp_nixos_nix",
      "mcp_nixos_nix_versions"
    ]
  }
}
